<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNotesActivity">

    <EditText
        android:id="@+id/title_EditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/futurabook"
        android:hint="Title"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/description_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="50dp"
        app:layout_editor_absoluteY="320dp" />

    <EditText
        android:id="@+id/description_EditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/futurabook"
        android:hint="Description"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/saveNotesBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_EditText"
        app:layout_editor_absoluteX="50dp"
        app:layout_editor_absoluteY="400dp" />

    <Button
        android:id="@+id/saveNotesBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="86dp"
        android:background="@color/purple_200"
        android:fontFamily="@font/futuraheavy"
        android:text="Sauvegarder note"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_EditText"
        app:layout_editor_absoluteX="50dp"
        app:layout_editor_absoluteY="580dp" />




</androidx.constraintlayout.widget.ConstraintLayout>